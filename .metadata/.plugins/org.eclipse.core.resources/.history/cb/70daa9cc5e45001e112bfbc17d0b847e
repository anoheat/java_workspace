package day09;

public class ClassEX01 {

	public static void main(String[] args) {
		Point p = new Point();
		p.print();
		p.setX(1);
		p.setY(4);
		p.print();
		

	}

}

class Point{
	private int x;
	private int y;
	
	public void print() {
		System.out.println("("+x+","+y+")");
	}
	
	//getter(멤버변수의 값을 가져오는 역할)
	//setter(멤버변수의 값을 변경하는 역할)
	public int getX() {
		return x;
	}
	public int getY() {
		return y;
	}
	
	public void setX(int x) {
		this.x = x;
	}
	
	public void setY(int y) {
		this.y = y;
	}
	
	
}


