package day08;

import java.util.Scanner;

public class 과제 {
	Scanner sc = new Scanner(System.in);
	
	int[] getComNum() {
		int[] a = new int[3];
		for (int i = 0; i < 3; i++) {
			a[i] = (int) (Math.random() * 3) + 1;
			if (i > 0) {
				for (int j = 0; j < i; j++) {
					if (a[j] == a[i]) {
						i--;
					}
				}
			}
		}
		return a;
	}
	int[] getUserNum() {
		String a = sc.next();
		String[] b = a.split(" ");
		int[] c = new int[3];
		for(int i=0;i<3;i++) {
			c[i]=Integer.parseInt(b[i]);
		}
		return c;		
	}
	int[] check(int[] a,int[] b) {
		int[] c = {0,0,0};
		for(int i=1; i<3; i++) {
			for(int j=1; j<3; j++) {
				if(a[i] == b[j]) {
					if(a[i] == b[i]) {
						c[0] += 1;
					}else {
						c[1] += 1;
					}
					
				}
				//asdpfsdajpdsfpj
			}
		}
	}
	
	
